<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_card_background">
    <TextView
        android:id="@+id/toilet"
        android:textSize="20dp"
        android:hint="@string/app_name"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/location"
        android:hint="@string/app_name"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/toilet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/costlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:text="Cost :"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/timelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/costlabel"
        android:text="Opening/Closing Time :"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/cost"
        android:hint="@string/app_name"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/location"
        android:layout_toRightOf="@+id/costlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/time"
        android:hint="@string/app_name"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/timelabel"
        android:layout_below="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>